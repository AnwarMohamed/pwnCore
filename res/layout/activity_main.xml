<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res/com.anwarelmakrahy.pwncore"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >

		<ImageView
			android:id="@+id/imageView11"
			android:layout_width="match_parent"
			android:layout_height="282dp"
			android:layout_gravity="center_vertical"
			android:scaleType="centerInside"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true"
			android:src="@drawable/logo" />
            
        <ProgressBar
            android:id="@+id/progress1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:translationY="-7.5dp" />
               	
        <ListView
            android:id="@+id/modulesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/progress1"
            android:layout_above="@+id/imageView1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="60dp"
            android:clickable="true"
            android:onClick="launchAttackWizard"
            android:text="Attack Wizard"
            android:textColor="#444444"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:onClick="launchAttackHall"
            android:text="Attack Hall"
            android:textColor="#444444"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:onClick="launchAttackWizard"
            android:src="@drawable/wizard"
            android:translationY="5dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="-30dp"
            android:clickable="true"
            android:onClick="launchAttackHall"
            android:src="@drawable/gun"
            android:translationY="5dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="#eeeeee"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>